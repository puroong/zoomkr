{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "incremental": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "test",
    "**/*.spec.ts"
  ]
}
